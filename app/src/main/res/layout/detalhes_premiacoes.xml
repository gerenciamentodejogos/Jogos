<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraint_detalhes_premiacoes">

    <TextView
            android:text="Sena - 6 números acertados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_faixa_premiacao"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="3 ganhadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_premiacoes_ganhadores"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_faixa_premiacao"
            app:layout_constraintStart_toStartOf="@+id/textview_faixa_premiacao"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
    <TextView
            android:text="Prêmio individual:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_label_premio_individual"
            app:layout_constraintTop_toBottomOf="@+id/textview_premiacoes_ganhadores"
            app:layout_constraintStart_toStartOf="@+id/textview_faixa_premiacao"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"/>
    <TextView
            android:text="Total pago:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_label_total_pago"
            app:layout_constraintTop_toBottomOf="@+id/textview_label_premio_individual"
            app:layout_constraintStart_toStartOf="@+id/textview_faixa_premiacao"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_premio_individual" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="@+id/textview_label_premio_individual"
            app:layout_constraintBottom_toBottomOf="@+id/textview_label_premio_individual"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_total_pago"
            app:layout_constraintTop_toTopOf="@+id/textview_label_total_pago"
            app:layout_constraintBottom_toBottomOf="@+id/textview_label_total_pago"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
    <View
            android:id="@+id/divider_bottom"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/textview_label_total_pago"
            android:layout_marginTop="12dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>