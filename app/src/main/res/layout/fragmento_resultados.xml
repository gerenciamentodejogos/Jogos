<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".resultados.FragmentoResultados"
        android:padding="8dp">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardView_spinner_tipo_jogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:cardElevation="4dp"
            app:cardCornerRadius="30dp"
            android:padding="8dp">

        <Spinner
                android:id="@+id/spinner_tipo_jogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </Spinner>

    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/textView_tipo_jogo_resultados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:textSize="30sp" android:textStyle="bold"
    android:visibility="gone"/>

    <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/viewpage_detalhes_sorteio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView_spinner_tipo_jogo"/>
</androidx.constraintlayout.widget.ConstraintLayout>