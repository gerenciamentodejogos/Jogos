<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_num_jogo"
            app:layout_constraintTop_toTopOf="@+id/textView21"
            app:layout_constraintBottom_toBottomOf="@+id/textView21"
            app:layout_constraintStart_toEndOf="@+id/textView21" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_time_1" android:textSize="14sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView_gols_time_1" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView21" android:textAlignment="viewEnd" android:maxLines="3"
            android:gravity="end"/>
    <TextView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_gols_time_1" android:textSize="14sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView22"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@+id/textView_time_1"
            app:layout_constraintBottom_toBottomOf="@+id/textView_time_1"/>
    <TextView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_gols_time_2" android:textSize="14sp"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/textView22"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView_gols_time_1"
            app:layout_constraintBottom_toBottomOf="@+id/textView_gols_time_1"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_time_2" android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/textView_gols_time_2"
            app:layout_constraintBottom_toBottomOf="@+id/textView_gols_time_2"
            app:layout_constraintStart_toEndOf="@+id/textView_gols_time_2" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_dia_da_semana" android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/textView_num_jogo"
            app:layout_constraintBottom_toBottomOf="@+id/textView_num_jogo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:text="@string/label_jogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
    <TextView
            android:text="@string/label_vz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            app:layout_constraintTop_toTopOf="@+id/textView_gols_time_1"
            app:layout_constraintBottom_toBottomOf="@+id/textView_gols_time_1"
            app:layout_constraintStart_toEndOf="@+id/textView_gols_time_1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView_gols_time_2" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <View
            android:id="@+id/divider_loteca_lotogol"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_time_1" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>